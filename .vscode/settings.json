{
	"[vhdl]": {
		"editor.fontLigatures": false,
		"editor.insertSpaces": false
	},
	// File explorer
	"files.exclude": {
		"db/": true,
		"incremental_db/": true,
		"simulation/": true
	},
	// VHDL formatter
	"vhdl.formatter.align.function": true,
	"vhdl.formatter.align.generic": true,
	"vhdl.formatter.align.port": true,
	"vhdl.formatter.align.procedure": true,
	"vhdl.formatter.case.keyword": "LowerCase",
	"vhdl.formatter.case.typename": "LowerCase",
	"vhdl.formatter.newline.generic": "NoNewLine",
	"vhdl.formatter.newline.port": "NoNewLine",
	"vhdl.formatter.newline.else": "None",
	"vhdl.formatter.insertFinalNewline": true,
	// Modern VHDL
	"editor.formatOnType": true,
	"vhdl.suggestLibraryCase": "lower",
	"vhdl.enableStutterComments": true,
	"vhdl.enableStutterDelimiters": true,
	"vhdl.enableStutterBrackets": true,
	// Markdown
	"[markdown]": {
		"editor.defaultFormatter": "yzhang.markdown-all-in-one"
	},
	"markdownlint.config": {
		"MD041": false, // first-line-h1
		"MD024": false, // no-duplicate-heading
		"MD033": false // no-inline-html
	},
	// JSON
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"cSpell.words": [
		"LEDs",
		"abcdefgp",
		"altera",
		"bruh",
		"caset",
		"combinational",
		"conv",
		"coord",
		"cpha",
		"cpol",
		"curr",
		"datasheet",
		"dbnce",
		"debouncer",
		"decrs",
		"disp",
		"dispon",
		"downto",
		"eewiki",
		"eval",
		"framebuffer",
		"frmctr",
		"gamctrn",
		"gamctrp",
		"getrgb",
		"gmctrn",
		"gmctrp",
		"gruvbox",
		"hexlify",
		"incrs",
		"inout",
		"integ",
		"lcd",
		"libitc",
		"madctl",
		"mosi",
		"pwctr",
		"pyperclip",
		"quartus",
		"ramwr",
		"raset",
		"rdaddress",
		"sclk",
		"slpout",
		"testbench",
		"uart",
		"vhdl",
		"vmctr",
		"wraddress"
	],
	"cSpell.ignoreRegExpList": [
		".*'.*" // VHDL attributes, e.g. "key_row'range"
	],
	// Todo tree
	"todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^|--)\\s*($TAGS)|^\\s*- \\[ \\])",
	"filewatcher.commands": [
		{
			"match": "(lib|src|tests)\\\\.*\\.vhd",
			"isAsync": true,
			"cmd": "C:\\Program Files\\Git\\bin\\bash.exe -c \"cd '${workspaceRoot}'; shopt -s globstar; for f in {src,tests}/**/*.vhd; do tools/pp.py $f dist/$(basename $f .vhd).pp.vhd & done\"",
			"event": "onFileChange"
		}
	]
}
